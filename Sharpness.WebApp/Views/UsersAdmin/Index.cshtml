@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">All registered users @Html.ActionLink("Create a New User", "Create", null, new { @class = "btn btn-success btn-sm" }) </strong>  
                    
 
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>UserId</th>
                                <th>User name</th>
                                <th>Instution</th>
                                <th>Email confirmed</th>
                                <th>Profile</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Institution</td>
                                    <td>@item.EmailConfirmed</td>

                                    
                                  
                                    <td>
                                        @Html.ActionLink("Profile", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                    </td>

                                    <td>
                                         @Html.ActionLink("Edit", "Edit",  new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                    </td>

                                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })</td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div><!-- .animated -->














