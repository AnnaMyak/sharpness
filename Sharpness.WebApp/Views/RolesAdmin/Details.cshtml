@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}





@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>No users found in this role.</p>
}


<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">All Users in the role "@Html.DisplayFor(model => model.Name)"</strong>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                
                                <th scope="col">Username</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                        
                           @foreach (var item in ViewBag.Users)
                            {
                            <tr>
                                <td>
                                    @item.UserName
                                </td>
                            </tr>
                           }
                               
                        </tbody>
                    </table>
                    @Html.ActionLink("Edit a role name", "Edit", new { id = Model.Id }, new {@class= "btn btn-warning btn-sm" })
                    @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    </div>
 </div>



       

        



