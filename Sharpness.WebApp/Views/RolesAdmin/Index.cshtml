@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
}








<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Roles @Html.ActionLink("Create a New Role", "Create", null, new { @class = "btn btn-success btn-sm" }) </strong>


                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Role</th>
                                
                                <th>Details</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>

                                    <td>@item.Name</td>
                                    

                                    <td>
                                        @Html.ActionLink("All Users in Role", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                    </td>

                                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div><!-- .animated -->

