@model Sharpness.WebApp.Models.SharpnessViewModels
@{
    ViewBag.Title = "All My Tests";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">All my tests</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titel</th>
                        <th scope="col">Description</th>
                        <th scope="col">Creation</th>
                        <th scope="col">Report</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;
                        foreach (var item in Model.WSIs)
                        {
                            <tr>
                                <th scope="row">@i</th>

                                <td>@item.Titel</td>
                                <td>@item.Description</td>
                                <td>@item.Creation</td>
                                <td>
                                    <i class="fa fa-star"></i>  @Html.ActionLink("To Report", "WSIToReport", "Dashboard", new { WSIId = item.WSIId }, null)
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


